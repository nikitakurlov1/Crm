{
  "name": "crypto-exchange",
  "version": "1.0.0",
  "description": "Modern cryptocurrency exchange platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "init-admin": "node init-admin.js",
    "init-roles": "node init-roles.js",
    "init-requisites": "node init-requisites.js",
    "init-all": "npm run init-roles && npm run init-admin && npm run init-requisites",
    "init-production": "node init-production.js",
    "setup": "npm install && npm run init-all"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "node-telegram-bot-api": "^0.66.0",
    "sqlite3": "^5.1.7",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "keywords": [
    "crypto",
    "exchange",
    "trading"
  ],
